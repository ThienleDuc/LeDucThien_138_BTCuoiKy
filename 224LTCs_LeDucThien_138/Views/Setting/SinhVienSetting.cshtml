@model _224LTCs_LeDucThien_138.Models.SinhVien;
@{
    ViewData["Title"] = "Sinh Viên - Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container px-4">
    <h1 class="mt-4 text-uppercase">Thông tin chung</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Thông tin tài khoản</li>
    </ol>
    <div class="row mb-4">
        <!-- Card Ảnh Đại Diện -->
        <div class="col-md-3">
            <div class="card shadow rounded-4 text-center mb-2">
                <div class="card-body p-4">
                    <form method="post" asp-action="UploadAvatarTaiKhoanSinhVien" asp-controller="Setting" enctype="multipart/form-data">
                        <!-- Ảnh đại diện hiển thị mặc định -->
                        <img id="anhDaiDien"
                             src="@Url.Content(string.IsNullOrEmpty(Model.Anh) ? "~/assets/img/origin/avatar-default.svg" : "~/assets/img/user/" + Model.Anh)"
                             alt="Ảnh Đại Diện" class="rounded-circle mb-3" width="120" height="120">

                        <!-- Input file ẩn -->
                        <input type="file" id="uploadAnh" name="Anh" accept="image/*" hidden />

                        <p class="text-muted small mb-2">
                            <strong class="text-danger">*Lưu ý:</strong> jpg/jpeg/png &lt;2MB
                        </p>

                        <div class="d-flex align-items-center justify-content-center">
                            <!-- Nút chọn ảnh -->
                            <div class="px-1 d-grid">
                                <button type="button" class="btn btn-primary btn-sm fw-bold font-monospace" onclick="document.getElementById('uploadAnh').click();">
                                    Chọn ảnh
                                </button>
                            </div>

                            <!-- Nút tải ảnh lên (ẩn ban đầu) -->
                            <div class="px-1 d-grid d-none" id="div-btnUploadAvatar">
                                <button type="submit" id="btnUploadAvatar" class="btn btn-success btn-sm fw-bold font-monospace">
                                    Đăng tải
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Hiển thị thông báo từ TempData -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }
        </div>

        <!-- Card Thông Tin -->
        <div class="col-md-9">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-6">
                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Khoa</label>
                                <p class="col form-control-plaintext font-monospace">@Model.TenKhoa</p>
                            </div>
                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Chuyên Ngành</label>
                                <p class="col form-control-plaintext font-monospace">@Model.TenNganh</p>
                            </div>
                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Niên Khóa</label>
                                <p class="col form-control-plaintext font-monospace">@Model.MaNK</p>
                            </div>
                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Lớp Sinh Hoạt</label>
                                <p class="col form-control-plaintext font-monospace">@Model.TenLSH</p>
                            </div>
                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Họ và Tên</label>
                                <p class="col form-control-plaintext font-monospace">@Model.TenSV</p>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Giới Tính</label>
                                <p class="col form-control-plaintext font-monospace">@((Model.GioiTinh ? "Nam" : "Nữ"))</p>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Ngày Sinh</label>
                                <p class="col form-control-plaintext font-monospace">@Model.NgaySinh?.ToString("dd/MM/yyyy")</p>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">CCCD</label>
                                <p class="col form-control-plaintext font-monospace">@Model.Cccd</p>
                            </div>
                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">SĐT</label>
                                <p class="col form-control-plaintext font-monospace">@Model.Sdt</p>
                            </div>
                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Email</label>
                                <p class="col form-control-plaintext font-monospace">@Model.Email</p>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <label class="col-4 text-muted fw-bold">Địa Chỉ</label>
                                <p class="col form-control-plaintext font-monospace">@Model.DiaChi</p>
                            </div>
                            
                        </div>
                    </div>

                    <div class="d-grid">
                        <a asp-action="UpdateTaiKhoanSinhVien" asp-controller="setting"
                           class="btn-link text-decoration-none">Thay đổi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/LoadAvatar.js"></script>
<script src="~/js/TogglePassword.js"></script>