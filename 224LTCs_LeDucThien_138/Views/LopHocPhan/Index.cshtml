@model List<_224LTCs_LeDucThien_138.Models.LopHocPhan>
@{
    ViewData["Title"] = "Lớp Học Phần - Xem danh sách";
    ViewData["HeadCollapse"] = "LopHocPhan";
    ViewData["LopHocPhan"] = "LopHocPhan-Index";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase">Lớp Học Phần</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Xem danh sách</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header text-uppercase">
            <i class="fa-solid fa-list me-1"></i>
            Phòng học
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center">
                        <select id="rowsPerPage" class="form-select w-auto">
                            @if (Model.Count >= 50)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                            }
                            else if (Model.Count >= 25)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                            }
                            else if (Model.Count >= 10)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                            }
                            else
                            {
                                <option value="5" selected>5</option>
                            }
                        </select>
                        <label for="rowsPerPage" class="ms-2 mb-0">Số lượng dòng trên bảng</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex gap-2 align-items-center justify-content-end">
                        <form method="get" asp-action="TimKiem" asp-controller="LopHocPhan" onsubmit="return validateSearch()">
                            <div class="d-flex justify-content-end">
                                <div class="d-md-inline-block form-inline flex-grow-1">
                                    <div class="input-group">
                                        <input id="tuKhoaInput" class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Tìm kiếm..." aria-describedby="btnNavbarSearch" name="TuKhoa" />
                                        <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <script>
                            function validateSearch() {
                                const input = document.getElementById('tuKhoaInput').value.trim();
                                if (input === '') {
                                    // Nếu rỗng, không cho submit
                                    return false;
                                }
                                // Cho phép submit nếu có giá trị
                                return true;
                            }
                        </script>
                       
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-6 d-flex justify-content-start">
                    <button class="btn btn-light border rounded" data-bs-toggle="modal" data-bs-target="#filterModalLopHocPhan">
                        <i class="fa-solid fa-filter text-muted"></i> Lọc
                    </button>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <a asp-action="ThemLopHocPhan" asp-controller="LopHocPhan" class="btn bg-success text-light fw-bold font-monospace">
                        <i class="fa-solid fa-plus"></i> Thêm Mới
                    </a>
                </div>
            </div>
            <!-- Hiển thị thông báo từ TempData -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Mã LHP</th>
                            <th>HP</th>
                            <th>Tên môn học</th>
                            <th>Số TC</th>
                            <th>Thứ</th>
                            <th>Từ tiết</th>
                            <th>Đến tiết</th>
                            <th>Giảng viên</th>
                            <th>Phòng</th>
                            <th>Còn</th>
                            <th>Tối đa</th>
                            <th>Ngày học</th>
                            <th colspan="3" class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        @if (Model.Count <= 5)
                        {
                            @foreach (var lhp in Model)
                            {
                                <tr class="data-row">
                                    <!-- Mặc định 10 dòng -->
                                    <td>@lhp.MaLHP</td>
                                    <td>@lhp.MaHP</td>
                                    <td>@lhp.TenMH</td>
                                    <td>@lhp.SoTC</td>
                                    <td class="text-center">@lhp.ThuNgay</td>
                                    <td class="text-center">@lhp.TietBatDau</td>
                                    <td class="text-center">@lhp.TietKetThuc</td>
                                    <td>@lhp.TenCB</td>
                                    <td class="text-center">@lhp.TenPhong</td>
                                    <td class="text-center">@lhp.SLHienTai</td>
                                    <td class="text-center">@lhp.SLToiDa</td>
                                    <td>@lhp.NgayHoc?.ToString("dd/MM/yyyy")</td>

                                    <td class="text-center">
                                        <a href="#" class="text-decoration-none text-black"><i class="fa-regular fa-eye"></i></a>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="SuaLopHocPhan" asp-controller="LopHocPhan" asp-route-maSV="@lhp.MaLHP" class="text-decoration-none text-warning">
                                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a class="text-decoration-none text-danger"
                                           asp-action="XoaLopHocPhan" asp-controller="LopHocPhan" asp-route-maSV="@lhp.MaLHP"
                                           onclick="return confirm('Bạn có chắc muốn xóa sinh viên này không?');">
                                            <i class="fa-regular fa-trash-can"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr class="data-row @(i >= 10 ? "d-none" : "")">
                                    <!-- Mặc định 10 dòng -->
                                    <td>@Model[i].MaLHP</td>
                                    <td>@Model[i].MaHP</td>
                                    <td>@Model[i].TenMH</td>
                                    <td>@Model[i].SoTC</td>
                                    <td class="text-center">@Model[i].ThuNgay</td>
                                    <td class="text-center">@Model[i].TietBatDau</td>
                                    <td class="text-center">@Model[i].TietKetThuc</td>
                                    <td>@Model[i].TenCB</td>
                                    <td class="text-center">@Model[i].TenPhong</td>
                                    <td class="text-center">@Model[i].SLHienTai</td>
                                    <td class="text-center">@Model[i].SLToiDa</td>
                                    <td>@Model[i].NgayHoc?.ToString("dd/MM/yyyy")</td>

                                    <td class="text-center">
                                        <a href="#" class="text-decoration-none text-black"><i class="fa-regular fa-eye"></i></a>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="SuaLopHocPhan" asp-controller="LopHocPhan" asp-route-maSV="@Model[i].MaLHP" class="text-decoration-none text-warning">
                                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a class="text-decoration-none text-danger"
                                           asp-action="XoaLopHocPhan" asp-controller="LopHocPhan" asp-route-maSV="@Model[i].MaLHP"
                                           onclick="return confirm('Bạn có chắc muốn xóa sinh viên này không?');">
                                            <i class="fa-regular fa-trash-can"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div id="pagination-container" class="d-flex align-items-center justify-content-between">
                <div>
                    Hiển thị <span id="startRow"></span> đến <span id="endRow"></span> trong số <span id="totalRows">@Model.Count</span> mục
                </div>

                <nav>
                    <ul class="pagination m-0" id="pagination">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/LopHocPhan/BoLocLopHocPhan.cshtml"></partial>
<script type="module" src="~/js/LoadLopHocPhan.js"></script>