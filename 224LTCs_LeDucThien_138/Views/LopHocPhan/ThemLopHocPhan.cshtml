@model _224LTCs_LeDucThien_138.Models.LopHocPhan;

@{
    ViewData["Title"] = "Sinh viên - Thêm Sinh Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HeadCollapse"] = "LopHocPhan";
    ViewData["LopHocPhan"] = "LopHocPhan-Add";
}

<div class="container px-4 py-4">
    <h1 class="mt-4 text-uppercase">Lớp Học Phần</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Thêm sinh viên</li>
    </ol>

    <!-- Card Thêm Sinh Viên -->
    <div class="card shadow rounded-4">
        <div class="card-body p-4">
            <form method="post" asp-area="" asp-action="ThemLopHocPhan" asp-controller="LopHocPhan">
                <div class="row">
                    <div class="text-end">
                        <button onclick="history.back()" class="btn btn-close fw-bold bg-secondary border rounded" title="Đóng"></button>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-6">
                        <div class="row mb-3">
                            <div class="col-6">
                                <label for="chooseNK" class="form-label">Niên khóa</label>
                                <select id="chooseNK" class="form-select" name="maNK">
                                    <option selected disabled>Chọn niên khóa</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="chooseHP" class="form-label">Học phần</label>
                                <select id="chooseHP" class="form-select" name="maHP">
                                    <option selected disabled>Chọn học phần</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <label for="chooseKhoa" class="form-label">Khoa</label>
                                <select id="chooseKhoa" class="form-select" name="maKhoa">
                                    <option selected disabled>Chọn khoa</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="chooseCN" class="form-label">Chuyên ngành</label>
                                <select id="chooseCN" class="form-select" name="maNganh">
                                    <option selected disabled>Chọn chuyên ngành</option>
                                </select>
                            </div>
                            
                        </div>
                       
                        <div class="row mb-3">
                            <div class="col-6">
                                <label for="chooseMH" class="form-label">Môn học</label>
                                <select id="chooseMH" class="form-select" name="maMH">
                                    <option selected disabled>Chọn môn học</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="choosePH" class="form-label">Phòng học</label>
                                <select id="choosePH" class="form-select" name="maPhong">
                                    <option selected disabled>Chọn phòng học</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label for="chooseCB" class="form-label">Giảng viên</label>
                                <select id="chooseCB" class="form-select" name="maCB">
                                    <option selected disabled>Chọn giảng viên</option>
                                </select>
                            </div>
                            <div class="col-6 align-content-end">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary fw-bold">Thêm lớp học phần</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex flex-column h-100">
                            <div class="row mb-3">
                                <div class="col-6 mb-3">
                                    <label for="ngayHoc" class="form-label">Ngày học</label>
                                    <input type="date" id="ngayHoc" name="NgayHoc" class="form-control" required />
                                </div>
                                <div class="col-6 mb-3">
                                    <label for="slToiDa" class="form-label">Số lượng tối đa</label>
                                    <input type="number" id="slToiDa" name="SLToiDa" class="form-control" min="1" required />
                                </div>
                                <div class="d-grid">
                                    <label for="chooseLH" class="form-label">Lịch học</label>
                                    <select id="chooseLH" name="maLich" class="form-select" required>
                                        <option selected disabled>Chọn lịch học</option>
                                    </select>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex flex-column h-100">
                                    <label for="ghiChu" class="form-label">Ghi chú</label>
                                    <textarea id="ghiChu" name="GhiChu" class="form-control flex-grow-1" placeholder="Nhập ghi chú" style="resize: none;"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/TogglePassword.js"></script>
<script type="module" src="~/js/LoadLopHocPhan.js"></script>