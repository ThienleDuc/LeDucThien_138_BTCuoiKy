<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Mã sinh viên</th>
            <th>Tên sinh viên</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ</th>
            <th colspan="3" class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @if (Model.Count <= 5)
        {
            @foreach (var sv in Model)
            {
                <tr class="data-row">
                    <!-- Mặc định 10 dòng -->
                    <td>@sv.MaSV</td>
                    <td>@sv.TenSV</td>
                    <td>@(sv.GioiTinh ? "Nam" : "Nữ")</td>
                    <td>@sv.NgaySinh?.ToString("dd/MM/yyyy")</td>
                    <td>@sv.DiaChi</td>
                    <td class="text-center">
                        <a href="#" class="text-decoration-none text-black"><i class="fa-regular fa-eye"></i></a>
                    </td>
                    <td class="text-center">
                        <a href="#" class="text-decoration-none text-warning">
                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        <a class="text-decoration-none text-danger"
                           asp-action="XoaSinhVien" asp-controller="SinhVien" asp-route-maSV="@Model.MaSV"
                           onclick="return confirm('Bạn có chắc muốn xóa sinh viên này không?');">
                            <i class="fa-regular fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr class="data-row @(i >= 10 ? "d-none" : "")">
                    <!-- Mặc định 10 dòng -->
                    <td>@Model[i].MaSV</td>
                    <td>@Model[i].TenSV</td>
                    <td>@(Model[i].GioiTinh ? "Nam" : "Nữ")</td>
                    <td>@Model[i].NgaySinh?.ToString("dd/MM/yyyy")</td>
                    <td>@Model[i].DiaChi</td>

                    <td class="text-center">
                        <a href="#" class="text-decoration-none text-black"><i class="fa-regular fa-eye"></i></a>
                    </td>
                    <td class="text-center">
                        <a href="#" class="text-decoration-none text-warning"
                           data-bs-toggle="modal" data-bs-target="#updatePhongModal"
                           data-maphong=""
                           data-tenphong=""
                           data-soluong="">
                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        <a class="text-decoration-none text-danger"
                           asp-action="XoaSinhVien" asp-controller="SinhVien" asp-route-maSV="@Model[i].MaSV"
                           onclick="return confirm('Bạn có chắc muốn xóa sinh viên này không?');">
                            <i class="fa-regular fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>