@model List<_224LTCs_LeDucThien_138.Models.SinhVien>
@{
    ViewData["Title"] = "Sinh viên - Xem danh sách";
    ViewData["HeadCollapse"] = "SinhVien";
    ViewData["SinhVien"] = "SinhVien-Index";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase">Sinh viên</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Xem danh sách</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header text-uppercase">
            <i class="fa-solid fa-list me-1"></i>
            Phòng học
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center">
                        <select id="rowsPerPage" class="form-select w-auto">
                            @if (Model.Count >= 50)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                            }
                            else if (Model.Count >= 25)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                            }
                            else if (Model.Count >= 10)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                            }
                            else
                            {
                                <option value="5" selected>5</option>
                            }
                        </select>
                        <label for="rowsPerPage" class="ms-2 mb-0">Số lượng dòng trên bảng</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex gap-2 align-items-center justify-content-end">
                        <form method="get" asp-action="TimKiem" asp-controller="SinhVien" onsubmit="return validateSearch()">
                            <div class="d-flex justify-content-end">
                                <div class="d-md-inline-block form-inline flex-grow-1">
                                    <div class="input-group">
                                        <input id="tuKhoaInput" class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Tìm kiếm..." aria-describedby="btnNavbarSearch" name="TuKhoa" />
                                        <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <script>
                            function validateSearch() {
                                const input = document.getElementById('tuKhoaInput').value.trim();
                                if (input === '') {
                                    // Nếu rỗng, không cho submit
                                    return false;
                                }
                                // Cho phép submit nếu có giá trị
                                return true;
                            }
                        </script>
                       
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-6 d-flex justify-content-start">
                    <button class="btn btn-light border rounded" data-bs-toggle="modal" data-bs-target="#filterModalSinhVien">
                        <i class="fa-solid fa-filter text-muted"></i> Lọc
                    </button>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <a asp-action="ThemSinhVien" asp-controller="SinhVien" class="btn bg-success text-light fw-bold font-monospace">
                        <i class="fa-solid fa-plus"></i> Thêm Mới
                    </a>
                </div>
            </div>
            <!-- Hiển thị thông báo từ TempData -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Mã sinh viên</th>
                        <th>Tên sinh viên</th>
                        <th>Giới tính</th>
                        <th>Ngày sinh</th>
                        <th>Địa chỉ</th>
                        <th colspan="3" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @if (Model.Count <= 5)
                    {
                        @foreach (var sv in Model)
                        {
                            <tr class="data-row">
                                <!-- Mặc định 10 dòng -->
                                <td>@sv.MaSV</td>
                                <td>@sv.TenSV</td>
                                <td>@(sv.GioiTinh ? "Nam" : "Nữ")</td>
                                <td>@sv.NgaySinh?.ToString("dd/MM/yyyy")</td>
                                <td>@sv.DiaChi</td>
                                <td class="text-center">
                                    <a href="#" class="text-decoration-none text-black"><i class="fa-regular fa-eye"></i></a>
                                </td>
                                <td class="text-center">
                                    <a asp-action="SuaSinhVien" asp-controller="SinhVien" asp-route-maSV="@sv.MaSV" class="text-decoration-none text-warning">
                                        <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a class="text-decoration-none text-danger"
                                       asp-action="XoaSinhVien" asp-controller="SinhVien" asp-route-maSV="@sv.MaSV"
                                       onclick="return confirm('Bạn có chắc muốn xóa sinh viên này không?');">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr class="data-row @(i >= 10 ? "d-none" : "")">
                                <!-- Mặc định 10 dòng -->
                                <td>@Model[i].MaSV</td>
                                <td>@Model[i].TenSV</td>
                                <td>@(Model[i].GioiTinh ? "Nam" : "Nữ")</td>
                                <td>@Model[i].NgaySinh?.ToString("dd/MM/yyyy")</td>
                                <td>@Model[i].DiaChi</td>

                                <td class="text-center">
                                    <a href="#" class="text-decoration-none text-black"><i class="fa-regular fa-eye"></i></a>
                                </td>
                                <td class="text-center">
                                    <a asp-action="SuaSinhVien" asp-controller="SinhVien" asp-route-maSV="@Model[i].MaSV" class="text-decoration-none text-warning">
                                        <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a class="text-decoration-none text-danger"
                                       asp-action="XoaSinhVien" asp-controller="SinhVien" asp-route-maSV="@Model[i].MaSV"
                                       onclick="return confirm('Bạn có chắc muốn xóa sinh viên này không?');">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <div id="pagination-container" class="d-flex align-items-center justify-content-between">
                <div>
                    Hiển thị <span id="startRow"></span> đến <span id="endRow"></span> trong số <span id="totalRows">@Model.Count</span> mục
                </div>

                <nav>
                    <ul class="pagination m-0" id="pagination">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/SinhVien/BoLocSinhVien.cshtml"></partial>
<script type="module" src="~/js/LoadSinhvien.js"></script>
