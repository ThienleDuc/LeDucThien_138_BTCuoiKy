@model List<_224LTCs_LeDucThien_138.Models.SinhVien>
@{
    ViewData["Title"] = "Sinh viên - Xem danh sách";
    ViewData["HeadCollapse"] = "SinhVien";
    ViewData["SinhVien"] = "SinhVien-Index";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase">Sinh viên</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Xem danh sách</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header text-uppercase">
            <i class="fa-solid fa-list me-1"></i>
            Phòng học
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center">
                        <select id="rowsPerPage" class="form-select w-auto">
                            @if (Model.Count >= 50)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                            }
                            else if (Model.Count >= 25)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                            }
                            else if (Model.Count >= 10)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                            }
                            else
                            {
                                <option value="5" selected>5</option>
                            }
                        </select>
                        <label for="rowsPerPage" class="ms-2 mb-0">Số lượng dòng trên bảng</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex gap-2 align-items-center justify-content-end">
                        <form class="flex-grow-1" method="get" asp-action="TimKiem" asp-controller="Home" onsubmit="return validateSearch()">
                            <div class="d-flex justify-content-end">
                                <div class="d-md-inline-block form-inline flex-grow-1">
                                    <div class="input-group">
                                        <input id="tuKhoaInput" class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Tìm kiếm..." aria-describedby="btnNavbarSearch" name="TuKhoa" />
                                        <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <script>
                            function validateSearch() {
                                const input = document.getElementById('tuKhoaInput').value.trim();
                                if (input === '') {
                                    // Nếu rỗng, không cho submit
                                    return false;
                                }
                                // Cho phép submit nếu có giá trị
                                return true;
                            }
                        </script>

                        <a href="#" class="btn bg-success text-light fw-bold font-monospace"
                           data-bs-toggle="modal" data-bs-target="#addPhongModal">
                            <i class="fa-solid fa-plus"></i> Thêm Mới
                        </a>
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2 mb-3">
                <select id="chooseNK" class="form-select w-auto">
                    <option selected disabledclass="text-center">Niên khóa</option>
                </select>
                <select id="chooseKhoa" class="form-select w-auto">
                    <option selected disabled class="text-center">Khoa</option>
                </select>
                <select id="chooseCN" class="form-select w-auto">
                    <option selected disabled class="text-center">Chuyên ngành</option>
                </select>

                <select id="chooseLSH" class="form-select w-auto">
                    <option selected disabled class="text-center">Lớp sinh hoạt</option>
                </select>
            </div>
            <!-- Hiển thị thông báo từ TempData -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            <div id="TableSinhVien-container">
                <partial name="~/Views/SinhVien/TableSinhVien.cshtml" model="Model"></partial>
            </div>

            <div id="" class="d-flex align-items-center justify-content-between">
                <div>
                    Hiển thị <span id="startRow">1</span> đến <span id="endRow">10</span> trong số <span id="totalRows">@Model.Count</span> mục
                </div>

                <nav>
                    <ul class="pagination m-0" id="pagination">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<script src="~/js/splitPage.js"></script>
<script src="~/js/LoadSinhvien.js"></script>
