@model _224LTCs_LeDucThien_138.Models.SinhVien;

@{
    ViewData["Title"] = "Sinh viên - Cập nhật Sinh Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HeadCollapse"] = "SinhVien";
    ViewData["SinhVien"] = "SinhVien-Update";
}

<div class="container px-4">
    <h1 class="mt-4 text-uppercase">Sinh viên</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">
            <a asp-action="Index" asp-controller="SinhVien" class="btn-link link-secondary text-decoration-none">
                Danh sách Sinh viên
            </a>
        </li>
        <li class="breadcrumb-item active">Cập nhật thông tin sinh viên</li>
    </ol>

    <!-- Card Thêm Sinh Viên -->
    <div class="card shadow rounded-4">
        <div class="card-body p-4">
            <form method="post" asp-action="SuaSinhVien" asp-controller="SinhVien">
                <div class="row">
                    <input type="hidden" name="MaSV" value="@Model.MaSV" />
                    <input type="hidden" name="MaLSH" value="@Model.MaLSH" />

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="hoTen" class="form-label">Họ và Tên</label>
                            <input type="text" class="form-control" id="hoTen" name="TenSV" placeholder="Nhập họ và tên" value="@Model.TenSV" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Giới Tính</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="GioiTinh" id="nam" value="true" @(Model.GioiTinh ? "checked" : "")>
                                <label class="form-check-label" for="nam">Nam</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="GioiTinh" id="nu" value="false" @(!Model.GioiTinh ? "checked" : "")>
                                <label class="form-check-label" for="nu">Nữ</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="ngaySinh" class="form-label">Ngày Sinh</label>
                            <input type="date" class="form-control" id="ngaySinh" name="NgaySinh" value="@Model.NgaySinh?.ToString("yyyy-MM-dd")" required>
                        </div>
                    </div>

                    <div class="col-md-6 d-flex flex-column">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="sdt" class="form-label">Số Điện Thoại</label>
                                <input type="tel" pattern="[0-9]{10}" inputmode="numeric" maxlength="10" class="form-control" id="sdt" name="Sdt" placeholder="Nhập số điện thoại" value="@Model.Sdt" />
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="Email" placeholder="Nhập email" value="@Model.Email" required />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label for="cccd" class="form-label">Căn cước</label>
                                <input type="text" inputmode="numeric" class="form-control" id="cccd" name="Cccd" placeholder="Nhập số căn cước" value="@Model.Cccd" />
                            </div>
                        </div>

                        <div class="mb-3 flex-grow-1">
                            <div class="d-flex flex-column h-100">
                                <label for="diaChi" class="form-label">Địa Chỉ</label>
                                <textarea class="form-control flex-grow-1" style="resize: none;" id="diaChi" name="DiaChi" placeholder="Nhập địa chỉ">@Model.DiaChi</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <div class="input-group border rounded">
                                    <input type="password" id="password" name="MatKhau" class="form-control border-0" placeholder="Nhập mật khẩu" value="@Model.MatKhau" required />
                                    <span class="input-group-text" style="cursor: pointer;" id="togglePassword">
                                        <i class="fa-solid fa-eye" id="eyeIcon"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6 align-content-end">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary fw-bold">Cập nhật Sinh Viên</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/TogglePassword.js"></script>
<script type="module" src="~/js/LoadSinhvien.js"></script>