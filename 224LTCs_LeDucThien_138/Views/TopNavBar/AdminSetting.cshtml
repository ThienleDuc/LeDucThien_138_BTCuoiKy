@{
    ViewData["Title"] = "Admin - Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4 px-4">
    <div class="row justify-content-center">
        <!-- Card Ảnh Đại Diện -->
        <div class="col-md-4 mb-4">
            <div class="card shadow rounded-4 text-center">
                <div class="card-body p-4">
                    <!-- Ảnh đại diện hiển thị mặc định -->
                    <img id="anhDaiDien" src="https://www.w3schools.com/w3images/avatar2.png" alt="Ảnh Đại Diện" class="rounded-circle mb-3" width="150" height="150">

                    <!-- Form chọn ảnh từ máy tính -->
                    <div class="mb-3">
                        <label for="uploadAnh" class="form-label">Chọn ảnh (.jpg hoặc .png)</label>
                        <input type="file" class="form-control" id="uploadAnh" accept="image/*">
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Thông Tin -->
        <div class="col-md-8">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="maTaiKhoan" class="form-label">Mã Tài Khoản</label>
                                <input type="text" class="form-control" id="maTaiKhoan" value="AD001" readonly>
                            </div>
                            <div class="col-md-6">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <div class="input-group border rounded">
                                    <input type="password" id="password" class="form-control border-0" placeholder="Nhập mật khẩu">
                                    <span class="input-group-text" style="cursor: pointer;" id="togglePassword">
                                        <i class="fa-solid fa-eye" id="eyeIcon"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="hoTen" class="form-label">Họ và Tên</label>
                            <input type="text" class="form-control" id="hoTen" value="Lê Đức Thiện">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Giới Tính</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gioiTinh" id="nam" checked>
                                <label class="form-check-label" for="nam">Nam</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gioiTinh" id="nu">
                                <label class="form-check-label" for="nu">Nữ</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="diaChi" class="form-label">Địa Chỉ</label>
                            <textarea class="form-control" id="diaChi" rows="2">123 Đường ABC, Quận XYZ, TP. Đà Nẵng</textarea>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="sdt" class="form-label">Số Điện Thoại</label>
                                <input type="text" class="form-control" id="sdt" value="0901234567">
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" value="admin@example.com">
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Cập Nhật Thông Tin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/togglePassword.js"></script>
<script src="~/js/uploadAvatar.js"></script>