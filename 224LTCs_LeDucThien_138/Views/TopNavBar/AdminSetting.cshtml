@model _224LTCs_LeDucThien_138.Models.TaiKhoanAdmin;
@{
    ViewData["Title"] = "Admin - Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container px-4">
    <h1 class="mt-4 text-uppercase">Thông tin chung</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Thông tin tài khoản</li>
    </ol>
    <div class="row">
        <!-- Card Ảnh Đại Diện -->
        <div class="col-md-4 mb-4">
            <div class="card shadow rounded-4 text-center">
                <div class="card-body p-4">
                    <!-- Ảnh đại diện hiển thị mặc định -->
                    <img id="anhDaiDien" src="https://www.w3schools.com/w3images/avatar2.png" alt="Ảnh Đại Diện" class="rounded-circle mb-3" width="150" height="150">

                    <!-- Form chọn ảnh từ máy tính -->
                    <div class="mb-3">
                        <label for="uploadAnh" class="form-label">Chọn ảnh (.jpg hoặc .png)</label>
                        <input type="file" class="form-control" id="uploadAnh" accept="image/*">
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Thông Tin -->
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <div class="row mb-3 align-items-center">
                        <label for="maTaiKhoan" class="col-3 form-label mb-0 text-muted fw-bold">Mã Tài Khoản</label>
                        <p class="col form-control-plaintext mb-0 ">@Model.MaTaiKhoan</p> <!-- Chỉ hiển thị thông tin -->
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label for="password" class="col-3 form-label mb-0 text-muted fw-bold">Mật khẩu</label>
                        <p class="col form-control-plaintext mb-0 ">******</p> <!-- Chỉ hiển thị mật khẩu dạng ẩn -->
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label for="hoTen" class="col-3 form-label mb-0 text-muted fw-bold text-black">Họ và Tên</label>
                        <p class="col form-control-plaintext mb-0 ">@Model.HoTen</p> <!-- Chỉ hiển thị thông tin -->
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label class="col-3 form-label mb-0 text-muted fw-bold text-black">Giới Tính</label>
                        <p class="col form-control-plaintext mb-0 ">@((Model.GioiTinh ? "Nam" : "Nữ"))</p> <!-- Hiển thị Giới tính -->
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label for="diaChi" class="col-3 form-label mb-0 text-muted fw-bold">Địa Chỉ</label>
                        <p class="col form-control-plaintext mb-0 ">@Model.DiaChi</p> <!-- Chỉ hiển thị thông tin -->
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label for="sdt" class="col-3 form-label mb-0 text-muted fw-bold">Số Điện Thoại</label>
                        <p class="col form-control-plaintext mb-0 ">@Model.Sdt</p> <!-- Chỉ hiển thị thông tin -->
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label for="email" class="col-3 form-label mb-0 text-muted fw-bold">Email</label>
                        <p class="col form-control-plaintext mb-0 ">@Model.Email</p> <!-- Chỉ hiển thị thông tin -->
                    </div>
                    <div class="d-grid">
                        <a asp-action="UpdateTaiKhoanAdmin" asp-controller="TopNavBar" asp-route-MaTaiKhoan="@Model.MaTaiKhoan" class="text-primary text-decoration-none">Thay đổi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                    document.getElementById('toastContent').innerText = '@TempData["SuccessMessage"]';
                    var toast = new bootstrap.Toast(document.getElementById('toastMessage'));
                    toast.show();
        </text>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <text>
                    document.getElementById('toastContent').innerText = '@TempData["ErrorMessage"]';
                    var toast = new bootstrap.Toast(document.getElementById('toastMessage'));
                    toast.show();
        </text>
    }
    });
</script>
}