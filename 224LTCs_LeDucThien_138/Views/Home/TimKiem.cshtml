@model List<_224LTCs_LeDucThien_138.Models.PhongHoc>
@{
    ViewData["Title"] = "Phòng học - Tìm kiếm";
    ViewData["HeadCollapse"] = "Home";
    ViewData["Home"] = "Home-TimKiem";
    var tuKhoa = Context.Request.Query["TuKhoa"].ToString();
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase">Phòng học</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Tìm kiếm</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header text-uppercase">
            <i class="fa-solid fa-list me-1"></i>
            Phòng học
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center">
                        <select id="rowsPerPage" class="form-select w-auto">
                            <partial name="~/Views/Shared/LuaChonPhanTrang.cshtml" model="Model"></partial>
                        </select>
                        <label for="rowsPerPage" class="ms-2 mb-0">Số lượng dòng trên bảng</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex gap-2 align-items-center justify-content-end">
                        <form method="get" asp-action="TimKiem" asp-controller="Home" onsubmit="return validateSearch()">
                            <div class="d-flex justify-content-end">
                                <div class="d-md-inline-block form-inline flex-grow-1">
                                    <div class="input-group">
                                        <input id="tuKhoaInput" class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Tìm kiếm..." aria-describedby="btnNavbarSearch" name="TuKhoa" value="@tuKhoa" />
                                        <button class="btn btn-primary" id="btnNavbarSearch" type="@(!string.IsNullOrWhiteSpace(tuKhoa) ? "submit" : "button") "><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <script>
                            function validateSearch() {
                            const input = document.getElementById('tuKhoaInput').value.trim();
                            if (input === '') {
                            // Nếu rỗng, không cho submit
                            return false;
                            }
                            // Cho phép submit nếu có giá trị
                            return true;
                            }
                        </script>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-6 d-flex justify-content-start">
                    <a asp-action="TimKiem" asp-controller="Home" class="btn border rounded bg-transparent">
                        <i class="fa-solid fa-arrows-rotate text-success"></i> Làm mới
                    </a>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="col-6 d-flex justify-content-end">
                            <a href="#" class="btn bg-success text-light fw-bold font-monospace"
                               data-bs-toggle="modal" data-bs-target="#addPhongModal">
                                <i class="fa-solid fa-plus"></i> Thêm Mới
                            </a>
                        </div>
                    }
                }
            </div>
            <partial name="~/Views/Home/DanhSachPhonghoc.cshtml" model="Model"></partial>
        </div>
    </div>
</div>
<partial name="~/Views/Home/AddPhong.cshtml"></partial>
<partial name="~/Views/Home/UpdatePhong.cshtml"></partial>

<script type="module" src="~/js/LoadPhongHoc.js"></script>
