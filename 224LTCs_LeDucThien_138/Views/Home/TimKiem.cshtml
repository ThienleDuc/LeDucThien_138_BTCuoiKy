@model List<_224LTCs_LeDucThien_138.Models.PhongHoc>
@{
    ViewData["Title"] = "Phòng học - Tìm kiếm";
    ViewData["HeadCollapse"] = "Home";
    ViewData["Home"] = "Home-TimKiem";
    var tuKhoa = Context.Request.Query["TuKhoa"].ToString();
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase">Phòng học</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Tìm kiếm</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header text-uppercase">
            <i class="fa-solid fa-list me-1"></i>
            Phòng học
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center">
                        <select id="rowsPerPage" class="form-select w-auto">
                            @if (Model.Count >= 50)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                            }
                            else if (Model.Count >= 25)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                            }
                            else if (Model.Count >= 10)
                            {
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                            }
                            else
                            {
                                <option value="5" selected>5</option>
                            }
                        </select>
                        <label for="rowsPerPage" class="ms-2 mb-0">Số lượng dòng trên bảng</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex gap-2 align-items-center justify-content-end">
                        <form method="get" asp-action="TimKiem" asp-controller="Home" onsubmit="return validateSearch()">
                            <div class="d-flex justify-content-end">
                                <div class="d-md-inline-block form-inline flex-grow-1">
                                    <div class="input-group">
                                        <input id="tuKhoaInput" class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Tìm kiếm..." aria-describedby="btnNavbarSearch" name="TuKhoa" value="@tuKhoa" />
                                        <button class="btn btn-primary" id="btnNavbarSearch" type="@(!string.IsNullOrWhiteSpace(tuKhoa) ? "submit" : "button") "><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <script>
                            function validateSearch() {
                            const input = document.getElementById('tuKhoaInput').value.trim();
                            if (input === '') {
                            // Nếu rỗng, không cho submit
                            return false;
                            }
                            // Cho phép submit nếu có giá trị
                            return true;
                            }
                        </script>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-6 d-flex justify-content-start">
                    <a asp-action="TimKiem" asp-controller="Home" class="btn border rounded bg-transparent">
                        <i class="fa-solid fa-arrows-rotate text-success"></i> Làm mới
                    </a>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <a href="#" class="btn bg-success text-light fw-bold font-monospace"
                       data-bs-toggle="modal" data-bs-target="#addPhongModal">
                        <i class="fa-solid fa-plus"></i> Thêm Mới
                    </a>
                </div>
            </div>
            <!-- Hiển thị thông báo từ TempData -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            @if (TempData["Message"] != null)
            {
                <div>@TempData["Message"]</div>
            }
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Mã phòng</th>
                        <th>Tên phòng</th>
                        <th>Sức chứa</th>
                        <th colspan="3" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @if (Model.Count <= 5)
                    {
                        @foreach (var p in Model)
                        {
                            <tr class="data-row">
                                <!-- Mặc định 10 dòng -->
                                <td>@p.MaPhong</td>
                                <td>@p.TenPhong</td>
                                <td>@p.SucChua</td>
                                <td class="text-center">
                                    <a href="#" class="text-decoration-none text-black"><i class="fa-regular fa-eye"></i></a>
                                </td>
                                <td class="text-center">
                                    <a href="#" class="text-decoration-none text-warning">
                                        <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="#" class="text-decoration-none text-danger"
                                    onclick="return confirm('Bạn có chắc muốn xóa phòng học này không?');">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr class="data-row @(i >= 10 ? "d-none" : "")">
                                <!-- Mặc định 10 dòng -->
                                <td>@Model[i].MaPhong</td>
                                <td>@Model[i].TenPhong</td>
                                <td>@Model[i].SucChua</td>
                                <td class="text-center">
                                    <a href="#" class="text-decoration-none text-black"><i class="fa-regular fa-eye"></i></a>
                                </td>
                                <td class="text-center">
                                    <a href="#" class="text-decoration-none text-warning"
                                    data-bs-toggle="modal" data-bs-target="#updatePhongModal"
                                    data-maphong="@Model[i].MaPhong"
                                    data-tenphong="@Model[i].TenPhong"
                                    data-soluong="@Model[i].SucChua">
                                        <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a class="text-decoration-none text-danger"
                                    asp-action="XoaPhong" asp-controller="Home" asp-route-maPhong="@Model[i].MaPhong"
                                    onclick="return confirm('Bạn có chắc muốn xóa phòng học này không?');">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <div class="d-flex align-items-center justify-content-between">
                <div>
                    Hiển thị <span id="startRow">1</span> đến <span id="endRow">10</span> trong số <span id="totalRows">@Model.Count</span> mục
                </div>

                <nav>
                    <ul class="pagination m-0" id="pagination">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/Home/AddPhong.cshtml"></partial>
<partial name="~/Views/Home/UpdatePhong.cshtml"></partial>

<script type="module" src="~/js/LoadPhongHoc.js"></script>
