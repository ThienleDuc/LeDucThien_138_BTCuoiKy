@{
    ViewData["Title"] = "Sinh Viên - Đăng nhập";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="mb-3">
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
        <i class="fa-solid fa-house"></i>
    </a>
</div>
<div class="card shadow p-4" style="width: 100%; max-width: 400px;">
    <form method="post" asp-action="SinhVien" asp-controller="Login">
        <div class="mb-3">
            <label for="inputUserName" class="form-label">Tài khoản</label>
            <div class="input-group border rounded">
                <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                <input type="text" pattern="[A-Za-z0-9]+" class="form-control border-0" id="inputUserName" name="username" placeholder="Nhập tài khoản">
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Mật khẩu</label>
            <div class="input-group border rounded">
                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                <input type="password" id="password" class="form-control border-0" name="password" placeholder="Nhập mật khẩu">
                <span class="input-group-text" style="cursor: pointer;" id="togglePassword">
                    <i class="fa-solid fa-eye" id="eyeIcon"></i>
                </span>
            </div>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="mb-3 alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="rememberCheck" name="rememberMe">
            <label class="form-check-label" for="rememberCheck">Nhớ mật khẩu</label>
        </div>
        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
    </form>
</div>